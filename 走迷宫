#include<stdio.h>
#include<windows.h>
#include<conio.h>

#define c 13
#define k 11
char map[k][c+1]={
	{"****###****"},
	{"*#**###*#*#"},
	{"*#******#*#"},
	{"**#***##***"},
	{"*****###*#*"},
	{"###*#****##"},
	{"#**#**##*##"},
	{"**#*****#**"},
	{"****###***E"}
};

void print_map()
{
	for(int i=0;i<k;i++)
		puts(map[i]);
}

void gb(int x,int y)
{
	COORD pos;
	pos.X=x;
	pos.Y=y;
	printf("curX=%d,curY=%d\n",x,y);
	SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE),pos);
}

int curX,curY;
int main()
{

	while(1)
	{
	system("cls");
	print_map();
	gb(curX,curY);

	char t=getch();
	  if(t=='w')
	 {
	    if((curY-1)>=0 && (map[curY-1][curX]=='*' || map[curY-1][curX]=='E'))
			curY--;
	 } 

	  else if(t=='s')
	 {
		if((curY+1)<k && (map[curY+1][curX]=='*' || map[curY+1][curX]=='E'))
			curY++;
	 }

	  else if(t=='a')
	 {
		if((curX-1)>=0 && (map[curY][curX-1]=='*' || map[curY][curX-1]=='E'))
			curX--;
	 }

	  else if(t=='d')
	 {
		if((curX+1)<k && (map[curY][curX+1]=='*' || map[curY][curX+1]=='E'))
			curX++;
	 }

	  if(map[curY][curX]=='E')
		  break;
	}

	return 0;
}
